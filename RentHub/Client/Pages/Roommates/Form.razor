@using RentHub.Shared
<EditForm Model="@roommate" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <div class="form-group">
        <label>Name</label>
        <div>
            <InputText @bind-Value="@roommate.Name" />
            <ValidationMessage For="@(() => roommate.Name)" />
        </div>
    </div>
    <div class="form-group">
        <div>
            <label>Monthly Rent</label>
            <div>
                <InputNumber @bind-Value="@roommate.MonthlyRentAmount" />
                <ValidationMessage For="@(() => roommate.MonthlyRentAmount)" />
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-success">
        @ButtonText
    </button>
</EditForm>
@code {
    [Parameter] public Roommate roommate { get; set; }
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit { get; set; }
}